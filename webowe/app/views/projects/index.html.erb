<!DOCTYPE html>
<html>
<head>
  <title>Webowe</title>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<center>
<h1>Listing projects</h1>
<table style="width:480px;height:42px;z-index:2;" cellpadding="0" cellspacing="0" id="Table1" border="1">
<tr style="background-color:transparent;background-image:url(/images/table_head_bg.png);background-repeat:repeat-x;background-position:left top;border:1px #87CEEB solid;text-align:left;vertical-align:top;width:66px;height:18px;">
<th>Name</th>
<th>Short&nbsp;desc</th>
<th>Description</th>
<th>Category</th>
<th></th>
<th></th>
<th></th>
</tr>
<% @projects.each do |project| %>
<tr style="background-color:#FFFFFF;border: 1px #87CEEB solid;text-align:left;vertical-align:top">
<td><%= project.name %></td>
<td><%= project.short_desc %></td>
<td><%= project.description %></td>
<td><%= project.category.name %></td>
<td><%= link_to 'Show', project %></td>
<td><%= link_to 'Edit', edit_project_path(project) %></td>
<td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>
<%= link_to 'Create Project', new_project_path %>
<br>
<%= link_to image_tag('/images/new.jpg'), new_project_path %>
</center>
</body>
</html>
