<!DOCTYPE html>
<html>
<head>
  <title>Webowe</title>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<center>
<%= form_for @file_project, :html => { :multipart => true } do |f| %>
  <% if @file_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@file_project.errors.count, "error") %> prohibited this file_project from being saved:</h2>

      <ul>
      <% @file_project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<table>
		<tr><td style="text-align: right">
    <%= f.label :source %></td><td style="text-align: left"><%= f.text_field :source %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.label :info %></td><td style="text-align: left"><%= f.text_area :info %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.label :pfile %></td><td style="text-align: left"><%= f.file_field :pfile %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.hidden_field :project_id %>
   		</td></tr>
   		</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</center>
</body>
</html>
