<!DOCTYPE html>
<html>
<head>
  <title>Webowe</title>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<center>
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<table>
		<tr><td style="text-align: right">
			<%= f.label :category_id %></td><td style="text-align: left"><%= f.collection_select(:category_id, @categories, :id, :name) %>
		</td></tr>
		<tr><td style="text-align: right">
		    <%= f.label :team_id %></td><td style="text-align: left"><%= f.collection_select(:team_id, @teams, :id, :info) %>
  		</td></tr>
		<tr><td style="text-align: right">
    		<%= f.label :name %></td><td style="text-align: left"><%= f.text_field :name %>
   		</td></tr>
		<tr><td style="text-align: right">
    		<%= f.label :short_desc %></td><td style="text-align: left"><%= f.text_field :short_desc %>
   		</td></tr>
		<tr><td style="text-align: right; vertical-align: top">
    		<%= f.label :description %></td><td style="text-align: left"><%= f.text_area :description %>
   		</td></tr>
   		</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</center>
</body>
</html>
