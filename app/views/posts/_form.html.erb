<!DOCTYPE html>
<html>
<head>
  <title>Webowe</title>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<center>
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if signed_in? %>
	<table>
		<tr><td style="text-align: right">
    <%= f.label :title %></td><td style="text-align: left"><%= f.text_field :title %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.label :content %></td><td style="text-align: left"><%= f.text_area :content %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.label :photo %></td><td style="text-align: left"><%= f.file_field :photo %>
		</td></tr>
		<tr><td style="text-align: right">
    <%= f.hidden_field :project_id %>
   		</td></tr>
   		</table>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>
</center>
</body>
</html>
